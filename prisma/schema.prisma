// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Categories {
  id Int @id @default(autoincrement())
  category String
}

model Words {
  id Int @id @default(autoincrement())
  word String
  translation String
  pronunciation String
  category Int
  gender String?
  image String
}

model Tenses {
  id Int @id @default(autoincrement())
  tense String
}

model Conjugations {
  id Int @id @default(autoincrement())
  verb Int
  tense Int
  yo String
  tu String
  el String
  nosotros String
  vosotros String
  ellos String
}

model Verbs {
  id Int @id @default(autoincrement())
  infinitive String
  translation String
  pronunciation String
}
